<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>Home Page</title>

</head>

<body>
  <div>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <img src="/images/logo.jpeg" class="img-fluid d-block mx-auto" width="200" height="200">
        </div>
      </div>
      <div>
        <nav class="navbar navbar-expand-md navbar-light bg-light">
          <div class="container-fluid">
            <div class="d-flex align-items-center">
              <a type="button" class="btn btn-outline-dark  me-2" me-2 href="/">Home</a>
              <a type="button" class="btn btn-outline-dark  me-2" href="/add-ad">Add Ad</a>
              <% if(user){ %>
                <a class="btn btn-outline-dark me-2" href="/logout">
                  Logout <i class="bi bi-box-arrow-right"></i>
                </a>
                <% }else{ %>
                  <a class="btn btn-outline-dark me-2" href="/login">
                    Admin Login <i class="bi bi-box-arrow-in-right"></i>
                  </a>
                  <% } %>

            </div>
          </div>
        </nav>
      </div>

      <div class="container mt-5">
        <div class="row">
          <div class="col-12">
            <h1 class="text-center">Welcome to the Home Page</h1>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <h2 class="text-center">List of Ads</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="row">
              <% ads.forEach(ad=> { %>
                <div class="col-md-3 d-flex align-items-stretch">
                  <div class="card mb-3">
                    <div class="card-body">
                      <h5 class="card-title">
                        <%= ad.title %>
                      </h5>
                      <p class="card-text">
                        <%= ad.description %>
                      </p>
                      <p class="card-text"><span class="fw-bold">Price:</span>
                        <%= ad.price %>
                      </p>
                      <p class="card-text"><span class="fw-bold">Email:</span>
                        <%= ad.email %>
                      </p>
                      <% if(ad.phoneNumber){ %>
                        <p class="card-text"><span class="fw-bold">Phone:</span>
                          <%= ad.phoneNumber %>
                        </p>
                        <% } %>
                          <% if(!ad.approved){ %>
                            <a href="/admin/approve/<%= ad.id %>" class="btn btn-primary">Approve</a>
                            <% } %>
                              <% if(user){ %>
                                <a href="/admin/delete/<%= ad.id %>" class="btn btn-danger">Delete</a>
                                <a href="/admin/edit/<%= ad.id %>" class="btn btn-secondary">Edit</a>
                                <% } %>
                    </div>
                  </div>
                </div>
                <% }) %>
            </div>
          </div>
        </div>




        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
          crossorigin="anonymous"></script>
</body>

</html>